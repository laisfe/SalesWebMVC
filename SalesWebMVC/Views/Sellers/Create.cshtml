@model SalesWebMVC.Models.Seller
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!--Esse asp-action="Create" é o CREATE do método POST-->
        <form asp-action="Create">
            <div class="form-group">
                <!--Esse asp-for="Name" indica que é o name da Model Seller-->
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <!--Esse asp-for="Email" indica que é o name da Model Seller-->
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <!--Esse asp-for="BirthDate" indica que é o name da Model Seller-->
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <!--Esse asp-for="BaseSalary" indica que é o name da Model Seller-->
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>